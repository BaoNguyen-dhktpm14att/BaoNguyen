<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/button4"
        android:layout_width="899dp"
        android:layout_height="171dp"
        android:text="NEXT"
        android:textColor="#090909"
        android:textSize="40"
        app:backgroundTint="#FFC107"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddress3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress3"
        tools:layout_editor_absoluteY="1441dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="329dp"
        android:layout_height="348dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lock_152879_1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="338dp"
        android:layout_height="225dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:text="FORGET PASSWORD"
        android:textAlignment="center"
        android:textColor="#0B0909"
        android:textSize="60"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        tools:layout_editor_absoluteY="611dp" />

    <EditText

        android:id="@+id/editTextTextEmailAddress3"
        android:layout_width="899dp"
        android:layout_height="171dp"
        android:background="#BDB7B7"
        android:inputType="text|textEmailAddress"
        android:singleLine="false"
        android:text="Email"
        android:textAlignment="center"
        android:textSize="60"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="1195dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="961dp"
        android:layout_height="194dp"
        android:text="Provide your account's email for which you want to reset your password"
        android:textAlignment="center"
        android:textColor="#1B1919"
        android:textSize="50"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.593"
        tools:layout_editor_absoluteX="108dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="241dp"
        android:layout_height="166dp"
        android:drawingCacheQuality="auto"
        app:srcCompat="@drawable/ic_mail_2935365_1"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="1195dp" />

</androidx.constraintlayout.widget.ConstraintLayout>